			<!-- the big circle -->
			<circle
			r='6'/>

			<!-- smaller (inner) circles -->
			<g id='c'>
				<circle r='3' cy='3'/>
				<circle r='1' cy='3'/>
			</g>
			<use xlink:href='#c' y='-6'/>

			<path
			d='M0 6
																																																																																																																																											 A6 6 0 0 1 0-6
																																																																																																																																											 A3 3 0 0 1 0 0
																																																																																																																																											 A3 3 0 0 0 0 6'/>

			<!-- small marker circles -->
			<g id='q'>
				<g id='p'>
					<circle r='.1' cy='2'/>
					<circle r='.1'/>
				</g>
				<use xlink:href='#p' y='4'/>
				<circle r='.1' cy='3'/>
			</g>
			<use xlink:href='#q' y='-6'/>
			<circle r='.1' cx='-6'/>
			<circle r='.1' cx='6'/>
			<circle r='.1' cx='-3' cy='3'/>
			<circle
			r='.1' cx='3' cy='3'/>

			<!-- meas lines & text -->
			<g id='m'>
				<path d='M8-6v2'/>
				<text x='8.2' y='-4.8'>r/3</text>
			</g>
			<use xlink:href='#m' y='2'/>
			<use xlink:href='#m' y='4'/>
			<g id='m1'>
				<path d='M10.5 0v6'/>
				<text x='10.7' y='3.25'>r</text>
			</g>
			<use xlink:href='#m1' y='-6'/>
			<g id='m3'>
				<path d='M-6 8.5h6'/>
				<text x='-3.15' y='9.3'>r</text>
				<g id='m2'>
					<path d='M-6 6.5h3'/>
					<text x='-5.15' y='7.3'>r/2</text>
				</g>
				<use xlink:href='#m2' x='3'/>
			</g>
			<use xlink:href='#m3' x='6'/>
			<g id='m4'>
				<path d='M7 0v3'/>
				<text x='7.3' y='1.7'>r/2</text>
			</g>
			<use xlink:href='#m4' y='3'/>
			<g>
				<path d='M6.5-2v1m0-3v1'/>
				<text x='5.8' y='-2.3'>r/6</text>
				<path d='M12.5-6V6'/>
				<text x='13' y='.25'>d = 2·r</text>
				<text x='9' y='8'>r = d/2</text>
			</g>

			<!-- diameter end points -->
			<text y='-6.2'>A</text>
			<text y='5.8'>B</text>
