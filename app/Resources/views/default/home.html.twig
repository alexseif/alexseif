{% extends '::base.html.twig' %}
{% block title %}Alex Seif - Web developer{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/home.css') }}"/>
{% endblock %}
{% block content %}
    <style>
        {# @todo: noise library #}
        .background-module--background--paUAO {
            display: block;
            width: 100vw;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 0;
            margin: 0;
            overflow: hidden;
            pointer-events: none;
            -webkit-transition: background-color .35s;
            transition: background-color .35s;
        {# @todo: get these variables #} -webkit-transition: background-color var(--animation-speed-fast);
            transition: background-color var(--animation-speed-fast);
        }

        .background-module--noise--32_qg {
            position: absolute;
            width: 150%;
            height: 150%;
            display: block;
            background-repeat: repeat;
            -ms-interpolation-mode: nearest-neighbor;
        {# @todo: get these variables #}
            image-rendering: -webkit-optimize-contrast;
            image-rendering: -moz-crisp-edges;
            image-rendering: -o-pixelated;
            image-rendering: pixelated;
            will-change: transform;
        }

        .background-module--noise--32_qg > * {
            width: 100%;
            height: 100%;
        }
    </style>
    {# @todo: get these variables #}
    <div class="background-module--background--paUAO"
         style="background-color:var(--jade);background-image: linear-gradient(to right, #351552, #663399);">
        <div class="background-module--noise--32_qg">
            <div style="background:url(data:image/png;base64,)"></div>
        </div>
    </div>
    <div class="site-wrapper">
        {% include 'sections/intro.html.twig' %}
        {% include 'sections/slogan.html.twig' %}
{#        {% include 'sections/pitch.html.twig' %}#}
        {% include 'sections/projects.html.twig' %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.fittext.js') }}"></script>
    <script src="{{ asset('js/scrollreveal.min.js') }}"></script>
    <script src="{{ asset('js/typed.min.js') }}"></script>
    <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}
