{% extends 'base.html.twig' %}
{% block title %}
	{{ 'alex_seif'|trans }}
	-
	{{ 'web_developer'|trans|capitalize }}
{% endblock %}
{% block content %}
	<div id="noise-bg"></div>
	<canvas id="noise-canvas"></canvas>	
	<section>
		<div class="x-container mb-5">
			<ol>
				{% for action, details in actionPlan %}
					<li>
						<h2>{{ action }}</h2>
						<ul>
							{% for detail in details %}
								<li>
									<b>{{ detail|split(':')|first }}:</b>
									{{ detail|split(':')|last }}</li>
							{% endfor %}
						</ul>
					</li>
				{% endfor %}
			</ol>
		</div>
	</section>
{% endblock %}
{% block announcements %}{% endblock %}
