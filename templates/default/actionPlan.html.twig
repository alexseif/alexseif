{% extends 'base.html.twig' %}
{% block title %}
  {{ 'alex_seif'|trans }}
  -
  {{ 'web_developer'|trans|capitalize }}
{% endblock %}
{% block nav %}

{% endblock %}
{% block content %}
  <section>
    <div class="container">
      <ol>
        {% for action, details in actionPlan %}
          <li>
            <h2>{{ action }}</h2>
            <ul>
              {% for detail in details %}
                <li>
                  <b>{{ detail|split(':')|first }}:</b>
                  {{ detail|split(':')|last }}
                </li>
              {% endfor %}
            </ul>
          </li>
        {% endfor %}
      </ol>
    </div>
  </section>
{% endblock %}
