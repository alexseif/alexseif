{% extends 'base.html.twig' %}

{% block title %}
	{{ 'wordpress_optimize.meta.title'|trans }}
{% endblock %}
{% block stylesheets %}
	{{ parent()}}
	{{ encore_entry_link_tags('wp-optimize') }}
{% endblock %}

{% block body %}

	<canvas class="background-grid" id="dotCanvas"></canvas>
	<div id="background-noise">
		<div id="noise-bg"></div>
		<canvas id="noise-canvas"></canvas>
	</div>
	<!-- Navigation Menu -->
	<nav class="nav-menu">
		<ul>
			<li>
				<a href="#services" title="{{ 'wordpress_optimize.navigation.what'|trans }}">{{ 'wordpress_optimize.navigation.what'|trans }}</a>
			</li>
			<li>
				<a href="#clients" title="{{ 'wordpress_optimize.navigation.who'|trans }}">{{ 'wordpress_optimize.navigation.who'|trans }}</a>
			</li>
			<li>
				<a href="#why" title="{{ 'wordpress_optimize.navigation.why'|trans }}">{{ 'wordpress_optimize.navigation.why'|trans }}</a>
			</li>
			<li>
				<a href="#contact" title="{{ 'wordpress_optimize.navigation.where'|trans }}">{{ 'wordpress_optimize.navigation.where'|trans }}</a>
			</li>
			<li>
				{% if app.request.locale != 'en' %}
					<a title="English" href="{{ path("app_landing_page_locale", {"_locale":"en"}) }}">EN</a>
				{% else %}
					<a title="Ø¹Ø±Ø¨ÙŠ" href="{{ path("app_landing_page_locale", {"_locale":"eg"}) }}">ðŸ‡ªðŸ‡¬</a>
				{% endif %}
			</li>


		</ul>
	</nav>
	<main id="site-wrapper">
		<header>
			<img src="{{ asset('build/images/Wordpress-Optimize-logo.png') }}" alt="WordPress Optimize Logo"/>
			<h1>{{ 'wordpress_optimize.header.title'|trans }}</h1>
			<p>{{ 'wordpress_optimize.header.subtitle'|trans }}</p>
			<a href="https://wa.me/201004006332" target="_blank" class="cta-button">{{ 'wordpress_optimize.header.cta_button'|trans }}</a>
		</header>

		<section class="section" id="services">
			<h2>{{ 'wordpress_optimize.services.title'|trans }}</h2>
			<div class="services">
				{% for package in packages %}
					<div class="card">
						<div class="card-header">
							<h3>{{ package.title|trans }}</h3>
						</div>
						<div class="card-body">
							<h4>{{ package.subtitle}}</h4>
							<p></p>
							<p>
								<span>{{ package.price_usd|format_currency('USD') }}</span>
								<strong style="float:{{ (app.request.locale != 'en') ? 'left' : 'right'}};">

									{% if package.price_sales is defined  %}

										<del>{{ package.price_egp|format_currency('EGP') }}</del>

										<span style="color:#0182BE;">{{ package.price_sales|format_currency('EGP') }}</span>
									{% else %}
										<span style="color:#0182BE;">{{ package.price_egp|format_currency('EGP') }}</span>
									{% endif %}
								</strong>


							</p>
							<p style="color:#0182BE; font-weight: bold;">{{ (package.offer is defined)?package.offer|trans }}</p>
							<ul>
								{% for feature in package.features %}
									<li>{{ feature|trans }}</li>
								{% endfor %}
							</ul>
						</div>
						<div class="card-footer">
							<a href="{{ package.cta_link}}" target="_blank" class="cta_link">{{ package.cta_text|trans }}</a>
						</div>
					</div>
					<!-- .card -->
				{% endfor %}

			</div>
		</section>

		<section class="portfolio " id="clients">
			<div class="section">
				<h2>{{ 'wordpress_optimize.clients.title'|trans }}</h2>
				<p>{{ 'wordpress_optimize.clients.subtitle'|trans }}</p>
			</div>
			<div id="clients">
				<div class="masonry-carousel">
					<div class="masonry-track">
						{% for image in portfolio_images %}
							<div class="masonry-item">
								<img src="{{ asset('build/images/portfolio/' ~ image) }}" alt="Client Logo">
							</div>
						{% endfor %}
						<!-- Duplicate for infinite scroll -->
						{% for image in portfolio_images %}
							<div class="masonry-item">
								<img src="{{ asset('build/images/portfolio/' ~ image) }}" alt="Client Logo">
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="section">
				<h3>{{ 'wordpress_optimize.clients.who_is_it_for'|trans }}</h3>
				<ul class="fancy-list">
					<li>{{ 'wordpress_optimize.clients.target_audience.0'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.1'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.2'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.3'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.4'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.5'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.6'|trans }}</li>
					<li>{{ 'wordpress_optimize.clients.target_audience.7'|trans }}</li>
				</ul>
				<p>{{ 'wordpress_optimize.clients.conclusion'|trans }}</p>
			</div>
		</section>

		<section class="section" id="why">
			<h2>{{ 'wordpress_optimize.why_choose.title'|trans }}</h2>

			<ul class="check-list">
				<li>{{ 'wordpress_optimize.why_choose.reasons.0'|trans }}</li>
				<li>{{ 'wordpress_optimize.why_choose.reasons.1'|trans }}</li>
				<li>{{ 'wordpress_optimize.why_choose.reasons.2'|trans }}</li>
				<li>{{ 'wordpress_optimize.why_choose.reasons.3'|trans }}</li>
				<li>{{ 'wordpress_optimize.why_choose.reasons.4'|trans }}</li>
				<li>{{ 'wordpress_optimize.why_choose.reasons.5'|trans }}</li>
			</ul>
		</section>

		<section class="section d-flex flex-column flex-md-row mb-5 fs-4 align-items-end" id="contact">
			<div class="col">
				<h2>{{ 'wordpress_optimize.contact.title'|trans }}</h2>
				<p>{{ 'wordpress_optimize.contact.subtitle'|trans }}</p>
				<a href="https://wa.me/201004006332" target="_blank" class="cta-button">{{ 'wordpress_optimize.contact.cta_button'|trans }}</a>
			</div>
			<div class="col">
				<div class="image-wrapper" style="text-align:end;">
					<img src="{{ asset('build/images/2023-06-22.jpg') }}" alt="Alex Seif, freelance web developer" width="200" class="circle">
				</div>
			</div>
		</section>
	</main>
{% endblock %}
{% block footer %}
	<footer>
		{{ 'wordpress_optimize.footer.copyright'|trans }}
		<a href="https://bit.ly/m/wpoptimize">
			<img src="{{ asset('build/images/WhatsApp-Icon.png') }}" alt="WhatsApp Icon" width="24" style="vertical-align: middle; margin-left: 5px;">
		</a>
	</footer>
{% endblock %}
