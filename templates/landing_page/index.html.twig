{% extends 'base.html.twig' %}

{% block title %}
	{{ 'wordpress_optimize.meta.title'|trans }}
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('wp-optimize') }}
{% endblock %}
{% block javascripts %}
