	{{ encore_entry_script_tags('wp-optimize') }}
{% endblock %}
{% block meta %}
	<meta
	name="description" content="{{ 'wordpress_optimize.meta.description'|trans }}"/>
	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="https://alexseif.com/wordpress-optimization"/>
	<meta property="og:title" content="{{ 'wordpress_optimize.meta.title'|trans }}"/>
	<meta property="og:description" content="{{ 'wordpress_optimize.meta.description'|trans }}"/>
	<meta
	property="og:image" content="https://alexseif.com/images/WordPress-Optimize-card.png"/>
	<!-- Twitter -->
	<meta name="twitter:card" content="summary_large_image"/>
	<meta name="twitter:site" content="@alexseif"/>
	<meta name="twitter:creator" content="@alexseif"/>
	<meta name="twitter:title" content="{{ 'wordpress_optimize.meta.title'|trans }}"/>
	<meta name="twitter:description" content="{{ 'wordpress_optimize.meta.description'|trans }}"/>
	<meta name="twitter:image" content="https://alexseif.com/images/WordPress-Optimize-card.png"/>
	<meta name="robots" content="index, follow"/>
{% endblock %}
