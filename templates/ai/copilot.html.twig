			--fs-1: 15px;
			--fs-2: 18px;
			--fs-3: 22px;
			--fs-4: 28px;
			--fs-5: 36px;
			--fs-6: 48px;

			/* card radius */
			--radius: 14px;
		}

		/* Reset & base */
		* {
			box-sizing: border-box;
		}
		html,
		body {
			margin: 0;
			padding: 0;
			background: var(--bg);
			color: var(--ink);
			font: 400 var(--fs-2) / 1.5 system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji";
		}
		img {
			max-width: 100%;
			display: block;
		}
		a {
			color: var(--accent);
			text-decoration: none;
		}
		.wrap {
			width: min(1100px, 92vw);
			margin: 0 auto;
		}

		/* Subtle gradient beams */
		.beams {
			position: fixed;
			inset: 0;
			pointer-events: none;
			z-index: 0;
			background: radial-gradient(1200px 600px at 15% 10%, rgba(110,193,228,0.12), transparent 60%), radial-gradient(900px 450px at 85% 20%, rgba(246, 166, 35, 0.10), transparent 55%), radial-gradient(800px 400px at 50% 100%, rgba(110, 193, 228, 0.06), transparent 60%);
			filter: saturate(1.2);
		}

		/* Header hero */
		header.hero {
			position: relative;
			z-index: 1;
			padding: var(--space-5) 0;
		}
		.hero h1 {
			font-size: clamp(var(--fs-5), 4vw, var(--fs-6));
			letter-spacing: -0.02em;
			margin: 0 0 var(--space-2);
		}
		.hero p.kicker {
			color: var(--muted);
			font-size: var(--fs-3);
			margin: 0 0 var(--space-3);
		}
		.hero .tags {
			display: flex;
			flex-wrap: wrap;
			gap: var(--space-2);
		}
